<div class="container py-16 leading-loose">
  <div class="w-full max-w-xl px-4 mx-auto">
    <div data-form-wrapper class="hidden">
      <h1 class="text-4xl font-heading font-bold" id="recover" tabindex="-1">
        {{ 'customer.recover_password.title' | t }}
      </h1>
      <div>
        <p class="pt-4">
          {{ 'customer.recover_password.subtext' | t }}
        </p>

        {%- form 'recover_customer_password', class: 'py-4' -%}
          {% assign recover_success = form.posted_successfully? %}
          <div class="field">     
            <label class="p-2 font-heading" for="RecoverEmail">
              {{ 'customer.login.email' | t }}
            </label>
            <input type="email"
              class="flex-grow mx-4 h-8"
              value=""
              name="email"
              id="RecoverEmail"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                aria-invalid="true"
                aria-describedby="RecoverEmail-email-error"
                autofocus
              {% endif %}
              placeholder="{{ 'customer.login.email' | t }}"
            >
          </div>
          {%- if form.errors -%}
            <small id="RecoverEmail-email-error" class="w-6">
              <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13" width="100%" height="100%">
                <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
              </svg>
              {{ form.errors.messages['form'] }}
            </small>
          {%- endif -%}

          <div class="grid grid-cols-1 md:grid-cols-2 py-1 gap-4 uppercase">
            <button class="btn border border-dark btn-dark btn-full">
              {{ 'customer.login.sign_in' | t }}
            </button>

            <button type="button" data-recover-toggle class="btn border border-dark btn-full " href="{{ routes.account_register_url }}">
              {{ 'customer.login.cancel' | t }}
            </button>
          </div>
        {%- endform -%}
      </div>
    </div>
    <div data-form-wrapper>
      <h1 class="text-4xl font-heading font-bold" id="login" tabindex="-1">
        {{ 'customer.login.title' | t }}
      </h1>
      <div>
        {%- if recover_success == true -%}
          <h3 class="form__message flex items-center mt-8" tabindex="-1" autofocus>
            <span class="block mr-2 w-6">
              <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7"/>
                <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"/>
                <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white">
              </svg>
            </span>
            {{ 'customer.recover_password.success' | t }}
          </h3>
        {%- endif -%}
        {%- form 'customer_login', novalidate: 'novalidate', class: 'py-4' -%}
          {%- if form.errors -%}
            <h2 class="form__message flex items-center" tabindex="-1" autofocus>
              <span class="sr-only">{{ 'accessibility.error' | t }} </span>
              <span class="block mr-2 w-6">
                <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13" width="100%" height="100%">
                  <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                  <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                  <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                  <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                </svg>
              </span>
              {{ 'templates.contact.form.error_heading' | t }}
            </h2>
            {{ form.errors | default_errors }}
          {%- endif -%}

          <div class="field">     
            <label class="p-2 font-heading" for="CustomerEmail">
              {{ 'customer.login.email' | t }}
            </label>   
            <input
              class="flex-grow mx-4 h-8"
              type="email"
              name="customer[email]"
              id="CustomerEmail"
              autocomplete="email"
              autocorrect="off"
              autocapitalize="off"
              {% if form.errors contains 'form' %}
                aria-invalid="true"
              {% endif %}
              placeholder="{{ 'customer.login.email' | t }}"
            >
          </div>

          {%- if form.password_needed -%}
            <div class="field">
              <label class="p-2 font-heading" for="CustomerPassword">
                {{ 'customer.login.password' | t }}
              </label>          
              <input
                class="flex-grow mx-4 h-8"
                type="password"
                value=""
                name="customer[password]"
                id="CustomerPassword"
                autocomplete="current-password"
                {% if form.errors contains 'form' %}
                  aria-invalid="true"
                {% endif %}
                placeholder="{{ 'customer.login.password' | t }}"
              >
              
            </div>

            <button class="text-xs underline" type="button" data-recover-toggle>
              {{ 'customer.login.forgot_password' | t }}
            </button>
          {%- endif -%}
          <div class="grid grid-cols-1 md:grid-cols-2 py-4 gap-4 uppercase">
            <button class="btn border border-dark btn-dark btn-full">
              {{ 'customer.login.sign_in' | t }}
            </button>

            <a class="btn border border-dark btn-full " href="{{ routes.account_register_url }}">
              {{ 'customer.register.title' | t }}
            </a>
          </div>
        {%- endform -%}
      </div>
      
      {%- if shop.checkout.guest_login -%}
        <div>
          <hr>
          <h2 class="font-heading text-2xl font-bold">{{ 'customer.login_page.guest_title' | t }}</h2>

          {%- form 'guest_login' -%}
            <button class="btn border border-dark btn-dark btn-full">
              {{ 'customer.login_page.guest_continue' | t }}
            </button>
          {%- endform -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<script>
  (() => {
    window.addEventListener('DOMContentLoaded', () => {
      const forms = document.querySelectorAll('[data-form-wrapper]');
      const formToggles = document.querySelectorAll('[data-recover-toggle]')

      formToggles.forEach(toggle => {
        toggle.addEventListener('click', () => {
          forms.forEach(form => form.classList.toggle('hidden'))
        })
      })
    });
  }) ();
</script>
